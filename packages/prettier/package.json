{
  "name": "@shared-config/prettier",
  "version": "1.1.0",
  "description": "All configs are here for making your development easier like EsLint, Prettier, TailWind, tsconfig etc.",
  "author": "Hridoy Ahmed",
  "license": "MIT",
  "repository": "https://github.com/codewithhridoy/config.git",
  "bugs": "https://github.com/codewithhridoy/config/issues",
  "homepage": "https://github.com/codewithhridoy/config#readme",
  "main": "dist/cjs/index.cjs",
  "module": "dist/mjs/index.js",
  "type": "module",
  "exports": {
    "import": "./dist/mjs/index.js",
    "require": "./dist/cjs/index.cjs"
  },
  "scripts": {
    "release": "pnpm run build && changeset publish",
    "build": "rollup -c",
    "publish-packages": "pnpm publish --access public --no-git-checks --provenance",
    "test:publish-packages": "pnpm publish --access public --no-git-checks --provenance --dry-run",
    "format": "prettier . --write --cache --ignore-unknown",
    "format:check": "prettier . --check --ignore-unknown"
  },
  "peerDependencies": {
    "prettier": "^3.0"
  },
  "devDependencies": {
    "rollup": "3.28.0"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "files": [
    "README.md",
    "dist"
  ],
  "keywords": [
    "eslint",
    "eslint-config",
    "tailwind",
    "tailwind-config",
    "tsconfig",
    "typescript",
    "typescript-config",
    "shared-configs",
    "prettier",
    "prettier-config",
    "javascript",
    "javascript-config",
    "config",
    "style-guide",
    "turbo"
  ],
  "packageManager": "pnpm@8.6.12"
}
